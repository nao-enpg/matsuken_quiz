<div class="flex flex-col items-center justify-center min-h-screen mx-auto px-4 pb-16 font-samba">
  <h1 class="bg-yellow-500 text-white text-2xl font-bold py-2 px-4 rounded">例のサンバを当てるゲーム</h1>
  <br>
  <h2 class="bg-yellow-500 text-white text-xl font-bold py-2 px-4 rounded">踊った曲を当ててください！</h2>
  <% if flash[:alert] %>
  <div class="alert bg-red-500 text-white text-xl font-bold text-center py-2 px-4 rounded">
    <%= flash[:alert] %>
  </div>
<% end %>
  <br>
  <div class="audio-controls flex space-x-2">
    <button id="playButton" class="bg-fuchsia-100 hover:bg-gray-100 text-yellow-500 font-bold py-2 px-4 rounded">
      踊る
    </button>
  </div>
  <audio id="audioPlayer" class="hidden">
  <source src="<%= @preview_url %>" type="audio/mpeg">
  </audio>

  <%# 曲のタイトル一覧 %>
  <%= form_with url: check_answer_sambas_path, local: true, method: :post, id: "quiz-form" do |form| %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-1">
      <% @songs_options.each do |song| %>
        <div class="song-option bg-yellow-500 hover:bg-yellow-600 active:bg-yellow-400 text-white font-bold py-2 px-4 rounded cursor-pointer my-1" data-song-id="<%= song.id %>">
          <%= song.track_name %>
        </div>
      <% end %>
    </div>
    <%= form.hidden_field :song_id, id: "selected_song_id" %>
    <div class="flex justify-center items-center">
      <%= form.submit 'ビバサンバ', class: "bg-fuchsia-100 hover:bg-gray-100 text-yellow-500 font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
