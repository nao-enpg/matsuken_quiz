<div class="flex flex-col items-center justify-center min-h-screen mx-auto px-4 font-samba">
  <% if @correct %>
    <p class="bg-yellow-500 text-white text-2xl py-1 px-4 my-2 rounded">オレ！正解です！</p>
    <% share_text = 'オレ！正解です！' %>
  <% else %>
    <p class="bg-yellow-500 text-white text-2xl py-1 px-4 my-2 rounded">カルナバル...ハズレです</p>
    <% share_text = 'カルナバル...ハズレです' %>
  <% end %>
  <p class="bg-yellow-500 text-white text-2xl py-2 px-4 rounded">正解： <%= @random_song.track_name %></p>
  <div class="bg-yellow-500 text-white text-2xl py-2 px-4 mt-4 rounded">
    <%= image_tag(@random_song.image_url, alt: @random_song.track_name, class: "w-4/5 max-w-screen-md mx-auto") %>
  </div>
  <%= link_to 'もう一度サンバする', sambas_path, class: "bg-yellow-500 text-white text-2xl py-2 px-4 rounded mt-4" %>
  <%= link_to "Xでシェアミーゴする", "https://twitter.com/share?url=#{ERB::Util.url_encode('https://matsuken-quiz.onrender.com/')}&text=#{ERB::Util.url_encode(share_text) + '%0a' + ERB::Util.url_encode('#例のサンバを当てるゲーム') + '%0a' }", target: '_blank' , class: "bg-yellow-500 text-white text-2xl py-2 px-4 rounded mt-4" %>
</div>