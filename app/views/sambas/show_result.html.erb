<div class="flex flex-col items-center justify-center min-h-[80vh] mx-auto px-4 font-samba">
  <% if @correct %>
    <p class="bg-yellow-500 text-white text-2xl py-1 px-4 my-2 rounded"><%= t('show_result.correct') %></p>
    <% share_text = t('show_result.correct') %>
  <% else %>
    <p class="bg-yellow-500 text-white text-2xl py-1 px-4 my-2 rounded"><%= t('show_result.wrong') %></p>
    <% share_text = t('show_result.wrong') %>
  <% end %>
  <p class="bg-yellow-500 text-white text-2xl py-2 px-4 rounded"><%= t('show_result.correct_answer') %> <%= I18n.t("songs.#{@random_song.id}.track_name", default: @random_song.track_name) %></p>
  <div class="bg-yellow-500 text-white text-2xl py-2 px-4 mt-4 rounded">
    <%= image_tag(@random_song.image_url, alt: @random_song.track_name, class: "w-4/5 max-w-screen-md mx-auto") %>
  </div>
  <%= link_to t('show_result.try_again'), sambas_path, class: "bg-yellow-500 text-white text-2xl py-2 px-4 rounded mt-4" %>
  <%= link_to t('show_result.share'), "https://twitter.com/share?url=#{ERB::Util.url_encode('https://matsuken-quiz.onrender.com/')}&text=#{ERB::Util.url_encode(share_text) + '%0a' + ERB::Util.url_encode(t('show_result.share_hashtag')) + '%0a' }", target: '_blank' , class: "bg-yellow-500 text-white text-2xl py-2 px-4 rounded mt-4" %>
</div>
